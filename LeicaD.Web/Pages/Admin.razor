@page "/admin"
@attribute [Authorize]

@using LeicaD.Web.Data
@inject AdminUserService adminUserService

<h3>Users</h3>

@if (users == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Roles</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in users)
            {
                <tr>
                    <td>@u.Username</td>
                    @* <td>@String.Join(", ", u.Roles)</td> *@
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private User[] users;

    protected override async Task OnInitializedAsync()
    {
        users = await adminUserService.GetUsersAsync();
    }
}
